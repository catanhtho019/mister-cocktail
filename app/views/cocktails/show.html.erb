<div class="container">
  <div class="show_card">
    <h1 style="text-align:left;"><%= @cocktail.name %></h1>
    <div style="text-align:left;">
      <%= link_to edit_cocktail_path do %>
        <i class="far fa-edit"></i>
      <% end %>
      <%= link_to cocktail_path, method: :delete, data: { confirm: "Do you want to delete #{@cocktail.name}?" } do %>
        <i class="fas fa-trash destroy_cocktail"style="font-size:22px;margin-left:1%;"id="sweet-alert-btn" id="delete-link" class="hidden"></i>
      <% end %>
    </div>


    <div class="row">
      <div class="col-sm-12 col-lg-10">
        <div class="d-flex">
          <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
          <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <table class="table table-bordered"style="background-color: #FCF9FF;border-radius:10px;border:0;margin-top:2%;color:#333333;text-align:left;">
          <tbody style="padding-left:5%;">
            <thead>
              <th>Ingredient</th>
              <th>Amount</th>

            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash destroy_dose"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "Back to all cocktails", cocktails_path %>
      </div>
    </div>
  </div>
</div>

