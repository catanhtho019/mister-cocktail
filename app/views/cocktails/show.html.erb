<div class="container">
  <div class="show_card">
    <h1 style="text-align:left;"><%= @cocktail.name %></h1>
    <div class="row">
      <div class="col-xs-12 col-lg-10">
        <div class="d-flex">
          <img src="https://source.unsplash.com/500x400/?cocktail" alt="cocktail">
          <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Amount</th>

            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fas fa-trash destroy_dose"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "Back to all cocktails", cocktails_path %>
      </div>
    </div>
  </div>
</div>
