<div class="container my-4" id="cocktail_cards">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="index_card">
          <% if cocktail.photo? %>
            <% background_url = cl_image_tag cocktail.photo, width: 400, height: 500, crop: :fill %>
          <% else %>
            <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
          <% end %>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
